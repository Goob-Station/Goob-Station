                       VAlign="Center"
                       VerticalExpand="True"
                       MinHeight="48"
                       Margin="5 0"
                       HorizontalExpand="True" ClipText="True" />
            </BoxContainer>
        </Control>
        <BoxContainer Name="ChildrenPrototypes" Access="Public" Orientation="Vertical"
                      Margin="24 0 0 0" />
    </BoxContainer>
