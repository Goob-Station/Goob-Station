<DefaultWindow xmlns="https://spacestation14.io"
							 xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
							 Title="{Loc intrinsic-voice-modulator-menu-title}">
	<PanelContainer Name="RootBackdrop">
		<BoxContainer Orientation="Vertical" SeparationOverride="4" MinWidth="150">
			<Label Name="CurrentName" Text="{Loc 'intrinsic-voice-modulator-current-name'}" />
			<LineEdit Name="NameLineEdit" />
			<Label Text="{Loc 'intrinsic-voice-modulator-name-change-speech-style'}" />
            <OptionButton Name="SpeechVerbSelector" /> <!-- Populated in LoadVerbs -->
			<Label Text="{Loc 'intrinsic-voice-modulator-icon-label'}"/>
			<GridContainer Name="IconGrid" Columns="10">
				<!-- Job icon buttons are generated in the code -->
			</GridContainer>
		</BoxContainer>
	</PanelContainer>
</DefaultWindow>
