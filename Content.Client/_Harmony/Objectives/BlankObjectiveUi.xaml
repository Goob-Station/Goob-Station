<ui:FancyWindow xmlns="https://spacestation14.io"
                xmlns:ui="clr-namespace:Content.Client.UserInterface.Controls"
                VerticalExpand="True" HorizontalExpand="True"
                Title="Select objective"
                MinSize="400 200">

    <BoxContainer
        Orientation="Vertical"
        Margin="5 5 5 5">

        <LineEdit Name="ObjectiveNameLineEdit"
            Margin="0 0 0 5"
            HorizontalAlignment="Stretch"
            PlaceHolder="Objective Name"
            Editable="True">
        </LineEdit>


        <TextEdit Name="ObjectiveDescriptionTextEdit"
            Margin="0 0 0 5"
            VerticalExpand="True"
            HorizontalExpand="True"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Editable="True">
        </TextEdit>

        <BoxContainer Orientation="Vertical" VerticalAlignment="Bottom" Margin="0 0 0 0">
            <Button Name="SubmitButton" Text="Submit" StyleClasses="OpenLeft" Access="Public"></Button>
            <!--Button Name="MakeUpObjectivesButton" Text="Make up objectives for me" StyleClasses="OpenRight" Access="Public"></Button-->
        </BoxContainer>

    </BoxContainer>
</ui:FancyWindow>
