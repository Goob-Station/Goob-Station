    <BoxContainer Orientation="Horizontal" SeparationOverride="4" MinSize="200 40">
        <Button Name="SaveButton" Access="Public" Text="{Loc 'character-setup-gui-save-panel-save'}" StyleClasses="ButtonBig"/>
