<controls:ContractorUplink
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._Goobstation.Contractor" MinSize="600 600">
    <PanelContainer>
        <BoxContainer Orientation="Vertical" Margin="5">
            <!-- Header -->
            <Label Text="Syndicate Contractor Uplink" />

            <!-- Summary Section -->
            <PanelContainer>
                <BoxContainer Orientation="Vertical" Margin="5">
                    <Label Text="Summary" />

                    <BoxContainer Orientation="Horizontal">
                        <Label Text="TC Available: 0 TC" />
                        <Button Text="Claim" />
                        <Label Text="Contracts Completed: 1" />
                    </BoxContainer>

                    <Label Text="Contractor Status: ACTIVE" />
                </BoxContainer>
            </PanelContainer>

            <!-- Contracts Section -->
            <Label Text="Contracts" />

            <ScrollContainer VerticalExpand="true">
                <BoxContainer Orientation="Vertical">
                    <!-- Example Contract Entry -->
                    <PanelContainer>
                        <BoxContainer Orientation="Vertical" Margin="5">
                            <Label Text="Bill Nokingston, the Scientist" />

                            <Label Text="Ransomeable to Nanotrasen for rebirthing a cult on NSS Cyberiad." />

                            <Label Text="Extraction Zone:" />

                            <GridContainer Columns="1">
                                <Button Text="Fore Port Solar Maintenance (4 TC)" />
                                <Button Text="Technical Storage (6 TC)" />
                                <Button Text="Robotics Lab (6 TC)" />
                            </GridContainer>
                        </BoxContainer>
                    </PanelContainer>
                </BoxContainer>
            </ScrollContainer>
        </BoxContainer>
    </PanelContainer>

</controls:ContractorUplink>
