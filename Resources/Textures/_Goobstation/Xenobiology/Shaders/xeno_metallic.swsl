uniform highp float reflectivity = 0.3;
uniform highp float edge_power = 1.2;

void fragment() {

highp vec4 sprite = texture(TEXTURE, UV);

if (sprite.a == 0.0) {
    discard;
}

float edge = length(vec2(dFdx(sprite.r), dFdy(sprite.g)));
edge = pow(edge, edge_power) * reflectivity;


vec3 metallic = sprite.rgb + edge;


COLOR = vec4(metallic, 1.0);
}
