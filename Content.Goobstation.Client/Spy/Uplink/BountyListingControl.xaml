<Control xmlns="https://spacestation14.io"
         xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
    <!-- Main container with overlay capability -->
    <PanelContainer Name="MainContainer"
                   HorizontalExpand="True"
                   VerticalExpand="True" Margin="0 2">

        <!-- Content container -->
        <BoxContainer Orientation="Vertical" Name="ContentContainer" Margin="5">
            <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                <TextureRect Name="BountyItemTexture"
                          Margin="0,0,4,0"
                          MinSize="48 48"
                          Stretch="KeepAspectCentered"/>
                <Control MinWidth="5"/>
                <Label FontColorOverride="#FF6347"
                     Name="BountyTitle"
                     Text="Bounty PLACEHOLDER Title"/>
            </BoxContainer>
            <RichTextLabel Name="BountyDesc"/>
            <BoxContainer Orientation="Horizontal">
                <Label FontColorOverride="#2ECC71"
                       Text="{Loc spy-reward-label}"/>
                <Label FontColorOverride="#2ECC71"
                       Name="RewardLabel"
                       Text="PLACEHOLDER"/>
            </BoxContainer>
        </BoxContainer>
        <PanelContainer.PanelOverride>
            <gfx:StyleBoxFlat BackgroundColor="#2c3e50"></gfx:StyleBoxFlat>
        </PanelContainer.PanelOverride>
        <!-- Overlay panel -->
        <PanelContainer Name="ClaimedOverlay"
                      Visible="False"
                      HorizontalExpand="True"
                      VerticalExpand="True"
                      Margin="-1">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#000000B4"></gfx:StyleBoxFlat>
            </PanelContainer.PanelOverride>
            <Label Text="CLAIMED!"
                 StyleClasses="BountyClaimedText"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 FontColorOverride="#FFFFFF"/>
        </PanelContainer>
    </PanelContainer>
</Control>
