<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="Spy Uplink"
    MinSize="512 512"
    SetSize="512 512">
    <BoxContainer Orientation="Vertical" SeparationOverride="8" VerticalExpand="True">
        <!-- Title -->
        <BoxContainer Orientation="Horizontal">
            <RichTextLabel Text="{Loc spy-bounty-label}" Margin="0 0 190 0" />
            <RichTextLabel Text="{Loc spy-time-label} " />
            <Label FontColorOverride="#F1C40f" Name="RefreshTimeLabel" Text="10:00" />
        </BoxContainer>
        <PanelContainer Modulate="#34495E" StyleClasses="HighDivider" />
        <PanelContainer VerticalExpand="True">
            <ScrollContainer
                HScrollEnabled="False"
                HorizontalExpand="True"
                MinSize="100 256"
                VerticalExpand="True" Margin="1">
                <BoxContainer
                    Name="UplinkBountyContainer"
                    MinSize="100 256"
                    Orientation="Vertical"
                    SizeFlagsStretchRatio="2"
                    VerticalExpand="True">
                </BoxContainer>
            </ScrollContainer>
        </PanelContainer>
    </BoxContainer>
</DefaultWindow>
