<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls;assembly=Content.Client"
                      Title="{Loc 'poll-voting-window-title'}"
                      MinSize="600 400"
                      SetSize="700 500">
    <BoxContainer Orientation="Vertical" Margin="8">
        <BoxContainer Orientation="Horizontal" Margin="0 0 0 8">
            <Label Text="{Loc 'poll-voting-window-active-polls'}"
                   StyleClasses="LabelHeading"
                   HorizontalExpand="True" />
            <Button Name="RefreshButton"
                    Text="{Loc 'poll-voting-window-refresh'}"
                    StyleClasses="OpenRight" />
        </BoxContainer>

        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Name="PollsList"
                         Orientation="Vertical"
                         SeparationOverride="8"
                         HorizontalExpand="True" />
        </ScrollContainer>

        <Label Name="StatusLabel"
               Text="{Loc 'poll-voting-window-loading'}"
               HorizontalAlignment="Center"
               Margin="0 8 0 0" />
    </BoxContainer>
</controls:FancyWindow>
