<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:customControls="clr-namespace:Content.Client.Administration.UI.CustomControls"
               Title="Mutations"
               MinWidth="600"
               MinHeight="600">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <!-- Header with currency display -->
        <BoxContainer Orientation="Horizontal" Margin="0 0 0 10">
            <Label Text="Mutations" StyleClasses="LabelHeading" HorizontalExpand="True" />
            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right">
                <TextureRect Name="CurrencyIcon"
                             MinSize="24 24"
                             Margin="0 0 5 0"
                             Stretch="KeepAspectCentered"
                             VerticalAlignment="Center" />
                <Label Name="CurrencyLabel"
                       Text="0"
                       StyleClasses="LabelBig"
                       VerticalAlignment="Center" />
            </BoxContainer>
        </BoxContainer>

        <!-- Main content area -->
        <BoxContainer Orientation="Horizontal" VerticalExpand="True">
            <!-- Left panel - Form selection with scrollable grid -->
            <ScrollContainer HorizontalExpand="False" VerticalExpand="True"
                           MinSize="200 400"
                           HScrollEnabled="False"
                           Margin="0 0 10 0">
                <GridContainer Name="FormsGrid"
                              Columns="3"
                              HSeparationOverride="5"
                              VSeparationOverride="5">
                    <!-- Form icons will be added here dynamically -->
                </GridContainer>
            </ScrollContainer>

            <!-- Vertical separator with explicit color -->
            <ScrollContainer MinWidth="10"
                   MinHeight="100"
                   VerticalExpand="True"
                   Margin="0 5 10 5"
                   StyleClasses="HighDivider"
                   Modulate="#fcba03"/>

            <!-- Right panel - Description and claim button -->
            <PanelContainer StyleClasses="PanelBackgroundDark" VerticalExpand="True" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" Margin="10" VerticalExpand="True">
                    <!-- Form name -->
                    <Label Name="FormNameLabel"
                           Text="Select a form"
                           StyleClasses="LabelHeading"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 10" />

                    <!-- Form image -->
                    <TextureRect Name="FormImage"
                                MinSize="128 128"
                                MaxSize="128 128"
                                Stretch="KeepAspectCentered"
                                HorizontalAlignment="Center"
                                Margin="0 0 0 10" />

                    <!-- Description scroll area -->
                    <ScrollContainer VerticalExpand="True"
                                   HScrollEnabled="False"
                                   Margin="0 0 0 10">
                        <BoxContainer Orientation="Vertical">
                            <RichTextLabel Name="FormDescriptionLabel"
                                          Text="Click on a form to view its description."
                                          VerticalExpand="True" />

                            <!-- Cost information -->
                            <Label Name="FormCostLabel"
                                   Text="Cost: 0"
                                   StyleClasses="LabelSecondaryColor"
                                   Margin="0 10 0 0" />
                        </BoxContainer>
                    </ScrollContainer>

                    <!-- Form status label -->
                    <Label Name="FormStatusLabel"
                           Text="Status: Locked"
                           StyleClasses="LabelSecondaryColor"
                           Margin="0 0 0 10" />

                    <!-- Claim button -->
                    <Button Name="MutationCloseButton"
                            Text="Claim Form"
                            Disabled="True"
                            HorizontalAlignment="Right"
                            MinHeight="32" />
                </BoxContainer>
            </PanelContainer>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
