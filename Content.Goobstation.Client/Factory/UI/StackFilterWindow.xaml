<controls:FancyWindow xmlns="https://spacestation14.io"
        xmlns:controls="using:Content.Client.UserInterface.Controls"
        Title="{Loc 'stack-filter-window-title'}"
        MinSize="250 120">
    <BoxContainer Orientation="Vertical" Align="Center">
        <BoxContainer Orientation="Horizontal" Margin="5">
            <Label Text="{Loc 'stack-filter-stack-size'}"/>
            <LineEdit Name="SizeEdit" PlaceHolder="1" HorizontalExpand="True"/>
        </BoxContainer>
        <Button Name="ConfirmButton" Text="{Loc 'generic-confirm'}" MaxSize="100 50"/>
    </BoxContainer>
</controls:FancyWindow>
