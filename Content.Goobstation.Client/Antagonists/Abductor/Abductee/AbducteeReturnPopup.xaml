<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls;assembly=Content.Client"
                      Title="{Loc 'abductee-return-popup-title'}"
                      MinSize="520 300"
                      MaxSize="520 300">
    <BoxContainer Orientation="Vertical" Margin="20">
        <Label Name="TitleLabel"
               StyleClasses="LabelBig"
               HorizontalAlignment="Center"
               Margin="0 0 10 5" />
        <PanelContainer StyleClasses="BackgroundDark" Margin="0 0 10 10">
            <BoxContainer Orientation="Vertical" Margin="10">
                <RichTextLabel Name="MessageLabel" HorizontalAlignment="Center" />
                <Control MinSize="0 10" />
                <RichTextLabel HorizontalAlignment="Center"
                               Text="{Loc 'abductee-return-popup-message2'}"
                               Margin="0 0 0 5" />
                <Control MinSize="0 5" />
            </BoxContainer>
        </PanelContainer>
        <BoxContainer Orientation="Vertical" VerticalAlignment="Bottom" Margin="0 10 0 0">
            <Button Name="OkButton"
                    Text="{Loc 'abductee-return-popup-button'}"
                    HorizontalAlignment="Center"
                    MinWidth="150" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
